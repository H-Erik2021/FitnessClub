{% extends "admin.twig" %}
{% block title %}Identification{% endblock %}
{% block content %}
  <h3 class="text-center">{{ action }} {{ user.NomPerso }} {{user.PrenomPerso}}</h3>
<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-md-12 login-sec">
                <br/><br/>
                <h2 class="text-center" style="color:#b22405">Authentification</h2>
                <br/>
                <form id="auth" role="form" method="POST" action="{{ url_for('admin_auth') }}">
                    <div class="form-group row mb-2 justify-content-md-center">
                        <label for="x_login" class="text-uppercase col-sm-2" style="color:#f58a4b">Email : </label>
                        <div class="col-sm-3">
                        <input type="text" name="x_login" class="form-control" placeholder="Votre email">
                        </div>
                    </div>
                    <div class="form-group row mb-2 justify-content-md-center">
                        <label for="x_pword" class="text-uppercase col-sm-2" style="color:#f58a4b">Mot de passe : </label>
                        <div class="col-sm-3">
                        <input type="password" name="x_pword" class="form-control" placeholder="Votre mot de passe">
                        </div>
                    </div>
                     <br/>
                    <div class="form-check row text-center justify-content-md-center">
                        <button type="submit" class="btn btn-outline-primary btn-lg mb-2 col-sm-3">Valider</button>
                    </div>

                </form>
            </div>
        </div>
    </section>
{% endblock %}

